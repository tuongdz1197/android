<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C1D8F0"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chào: Admin"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnDanhsach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="150dp"
        android:background="#F1CCB4"

        android:text="Quản Lý Nhân Viên"/>

    <Button
        android:id="@+id/btnTinhluong"
        android:layout_width="match_parent"
        android:height="150dp"
        android:layout_height="wrap_content"
        android:background="#C1F1B4"
        android:text="Quản Lý Chấm Công"/>
    <Button
        android:id="@+id/btnLichsu"
        android:layout_width="match_parent"
        android:height="150dp"
        android:layout_height="wrap_content"
        android:background="#F1F0B4"

        android:text="Thống Kê"/>

</LinearLayout>